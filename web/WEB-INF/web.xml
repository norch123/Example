        <servlet-name>ShowEmployee</servlet-name>
        <servlet-class>Controller.ShowEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetEmployee</servlet-name>
        <servlet-class>Controller.GetEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SavaChange</servlet-name>
        <servlet-class>Controller.SavaChange</servlet-class>
