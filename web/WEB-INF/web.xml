        <servlet-name>GetEmployee</servlet-name>
        <url-pattern>/GetEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SavaChange</servlet-name>
        <url-pattern>/SavaChange</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAddForm</servlet-name>
        <url-pattern>/ShowAddForm</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
